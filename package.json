{
  "name": "@srl/distraction-logger",
  "version": "0.1.0",
  "description": "A Svelte component for tracking and analyzing distractions during work sessions",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "svelte-package",
    "check": "svelte-check --tsconfig ./tsconfig.json"
  },
  "keywords": [
    "svelte",
    "component",
    "distraction-tracking",
    "focus",
    "productivity",
    "self-regulated-learning"
  ],
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/package": "^2.0.0",
    "svelte": "^5.43.8",
    "svelte-check": "^4.3.4",
    "typescript": "^5.9.3"
  }
}
